<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        tools:context=".PermissionActivity">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="250dp"
            android:layout_margin="16dp"
            android:layout_height="175dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bluetooth_scan" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bluetoothConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cornerRadius="50dp"
            android:text="Bluetooth Connect Permission" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bluetoothScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cornerRadius="50dp"
            android:text="Bluetooth Scan Permission" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/location"
            app:cornerRadius="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Location Permission" />
    </LinearLayout>
</layout>